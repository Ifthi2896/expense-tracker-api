<!-- views/expenses.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense Tracker</title>
</head>
<body>
  <h1>All Expenses</h1>
  <ul>
    <% expenses.forEach(expense => { %>
      <li>
        <strong><%= expense.title %></strong>: $<%= expense.amount %>
        <p><%= expense.date %></p>
      </li>
    <% }) %>
  </ul>
</body>
</html>
